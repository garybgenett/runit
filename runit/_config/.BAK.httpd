#!/bin/sh
# run: vipw && vigr
# add: daemon
# edit: /etc/httpd/httpd.conf
# change: ErrorLog "/dev/stdout"
# change: CustomLog "/dev/stdout" common
exec 2>&1
sv start /.runit/services/syslogd || exit 1
sv start /.runit/services/klogd || exit 1
killall -9 httpd
#>>>mkdir -pv /var/log/httpd
#>>>chown -vR daemon:daemon /var/log/httpd
exec httpd -DNO_DETACH
# end of file
