#!/bin/sh
exec 2>&1
sv start /.runit/services/syslogd	|| exit 1
sv start /.runit/services/klogd		|| exit 1
killall -v -9 sshd
rm -frv /var/run/sshd.pid
[ ! -f /etc/ssh/ssh_host_ecdsa_key ] && ssh-keygen -N "" -t ecdsa -b  512 -f /etc/ssh/ssh_host_ecdsa_key
[ ! -f /etc/ssh/ssh_host_rsa_key ]   && ssh-keygen -N "" -t rsa   -b 4096 -f /etc/ssh/ssh_host_rsa_key
exec /usr/sbin/sshd \
	-D	\
	-e
# end of file
