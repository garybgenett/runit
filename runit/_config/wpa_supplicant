#!/bin/sh
exec 2>&1
sv start /.runit/services/syslogd	|| exit 1
sv start /.runit/services/klogd		|| exit 1
killall -v -9 wpa_supplicant
cat >/etc/wpa_supplicant/wpa_supplicant.conf <<END_OF_CONF
ap_scan=1
network={
	ssid="Unknown Network"
	psk="onthenetwork"
	key_mgmt=WPA-PSK
	scan_ssid=1
	priority=99
}
network={
	ssid="Invalid Network"
	psk="onthenetwork"
	key_mgmt=WPA-PSK
	scan_ssid=1
	priority=98
}
network={
	ssid="Unsafe Network"
	psk="onthenetwork"
	key_mgmt=WPA-PSK
	scan_ssid=1
	priority=97
}
network={
	ssid="InternetConnection"
	psk="onthenetwork"
	key_mgmt=WPA-PSK
	scan_ssid=1
	priority=89
}
END_OF_CONF
exec wpa_supplicant \
	-d \
	-t \
	-f /dev/stdout \
	-c /etc/wpa_supplicant/wpa_supplicant.conf \
	-D nl80211 \
	-i wlan0
# end of file
